#include <iostream>
#include <cmath>
using namespace std;


void calc(int P, int n, int Vibor) //ввод функции счета, использование P, n, Vibor
{   
    if (Vibor!=0){
    int month = n*12; //ввод месяцев
    float m = month/Vibor;
    float I = 15;
    int S = (P * (pow((1 +((I/100) / (m/12))), ((m/12) * n)))); //счет вклада
    cout <<"Summa vklada = "<<S; //вывод вклада
    }

}


